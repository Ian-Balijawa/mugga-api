		"@types/express": "^4.17.21",
		"@types/helmet": "^4.0.0",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.10.1",
		"@types/node-cron": "^3.0.11",
		"@types/nodemailer": "^6.4.14",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.7",
		"jest": "^29.7.0",
		"ts-node": "^10.9.1"
	}
